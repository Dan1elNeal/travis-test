{
  "name": "team5",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "precommit": "npm test",
    "prepush": "npm test",
    "lint": "eslint . && stylelint components/**/*.css pages/**/*.css",
    "test": "npm run lint",
    "jstest": "mocha **/tests/*.spec.js",
    "build": "next build",
    "start": "node ./server/index.js",
    "deploy": "now --token $NOW_TOKEN --public --debug",
    "alias": "now alias the-best-messenger.now.sh --token=$NOW_TOKEN --debug"
  },
  "dependencies": {
    "@zeit/next-css": "^0.1.5",
    "axios": "^0.18.0",
    "body-parser": "1.18.2",
    "casual": "^1.5.19",
    "classnames": "^2.2.5",
    "cloudinary": "^1.11.0",
    "config": "^1.30.0",
    "cookie-parser": "1.4.3",
    "copy-to-clipboard": "^3.0.8",
    "create-react-app": "^1.5.2",
    "dotenv": "^5.0.1",
    "emoji-mart": "^2.5.1",
    "express": "^4.16.3",
    "express-session": "1.15.6",
    "howler": "^2.0.12",
    "js-md5": "^0.7.3",
    "material-ui": "^1.0.0-beta.45",
    "metascraper": "^3.10.4",
    "mocha": "^5.1.0",
    "mongoose": "^5.0.16",
    "multer": "^1.3.0",
    "next": "^5.1.0",
    "node-fetch": "^2.1.2",
    "passport": "0.4.0",
    "passport-github": "1.1.0",
    "react": "^16.3.0",
    "react-chat-elements": "^0.9.0",
    "react-datetime": "^2.14.0",
    "react-dom": "^16.3.1",
    "react-dropzone": "^4.2.9",
    "react-image-lightbox": "^4.6.0",
    "react-markdown": "^3.3.0",
    "react-modal": "^3.3.2",
    "react-web-notification": "^0.3.1",
    "request": "^2.83.0",
    "socket.io": "^2.1.0",
    "socket.io-client": "^2.1.0",
    "twilio": "^3.16.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.2",
    "eslint": "^4.19.1",
    "eslint-config-hrundel": "1.3.0",
    "eslint-plugin-react": "^7.7.0",
    "husky": "^0.14.3",
    "webpack": "3.1.0",
    "stylelint-config-hrundel": "1.0.3",
    "stylelint": "7.3.1"
  },
  "now": {
    "name": "the-best-messenger",
    "alias": "https://the-best-messenger.now.sh",
    "env": {
      "NODE_ENV": "production",
      "GITHUB_CLIENT_ID": "@client-id",
      "GITHUB_CLIENT_SECRET": "@client-secret",
      "EXPRESS_SESSION_SECRET": "express-session-secret",
      "BASE_URL": "@base-url",
      "IMAGE_CDN_CLOUD_NAME": "@image-cdn-cloud-name",
      "IMAGE_CDN_API_KEY": "@image-cdn-api-key",
      "IMAGE_CDN_API_SECRET": "@image-cdn-api-secret",
      "MONGODB_LOGIN": "@mongodb_login",
      "MONGODB_PASSWORD": "@mongodb_password",
      "CALLER_ACCOUNT_SID": "@caller-account-sid",
      "CALLER_AUTH_TOKEN": "@caller-auth-token",
      "CALLER_NUMBER": "@caller-number",
      "CALLER_TWIML": "@caller-twiml"
    }
  }
}
